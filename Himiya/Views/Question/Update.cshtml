@model Himiya.Models.Question

@{
    ViewBag.Title = "Редагувати питання";
    Layout = "~/Views/Admin/_LayoutPageAdmin.cshtml";
}

    <div class="form-wrapper">
        @using (Html.BeginForm())
        {
            <header class="table-caption clear-float">
                <h3>@ViewBag.Title</h3>
            </header>
            <label>Питання</label><textarea rows="10" name="Quest">@Model.Quest</textarea>
            <label>Правильна відповідь</label><input type="text" name="Answer" value="@Model.Answer">
            <p class="info-message">
                * для введення нижнього індексу (наприклад,
                при введенні формул) потрібно...
            </p>
            <label>@Html.CheckBox("IgnoreCase", Model.IgnoreCase)Ігнорувати регістр</label>
            <input type="hidden" name="Id" value="@Model.Id">
            @Html.Hidden("back_link", (object)ViewBag.BackLink)
            <div class="table-footer clear-float">
                <input type="submit" value="Зберегти зміни">
                <a class="cancel-btn" href="@ViewBag.BackLink">Відмінити</a>
            </div>
        }
    </div>

